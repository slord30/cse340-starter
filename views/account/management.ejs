<!-- Content Heading -->
<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

<!--- FLASH MESSAGE ---->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname %></h2>

<p>
  <a href="/account/update/<%= accountData.account_id %>" class="manage">Update Account Information</a>
</p>

<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %> 
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv/" class="manage">Access Inventory Management</a>
  </p>
<% } %>

<h2>Your Reviews</h2>
<% if (reviews && reviews.length > 0) { %>
  <div class="reviews-container">
    <% reviews.forEach(review => { %>
      <div class="review-card">
        <div class="review-header">
          <strong><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></strong>
          <%= new Date(review.review_date).toLocaleDateString() %>
        </div>
        <p class="review-text"><%= review.review_text %></p>
        
        <div class="review-actions">
          <a href="/review/edit/<%= review.review_id %>" class="action-link edit">Edit</a>
          
          <form action="/review/delete" method="post" class="inline-form">
            <input type="hidden" name="review_id" value="<%= review.review_id %>">
            <button type="submit" class="action-link delete">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p>You have not written any reviews yet.</p>
<% } %>