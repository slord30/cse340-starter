<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!--- FLASH MESSAGE -->
<%- messages() %>

<!--- SERVER-SIDE VALIDATION ERRORS -->
<% if (errors && errors.array) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<!-- INVENTORY FORM -->
<p><strong>All fields are required.</strong></p>
<div>
  <form id="addInventory" method="post" action="/inv/add-inventory">

    <!-- Classification -->
    <label for="classificationList">Classification:</label>
    <%- classificationList %>

    <!-- Make -->
    <label for="make">Make:</label>
    <input type="text" id="make" name="inv_make" required
      pattern="[A-Za-z\s]+"
      value="<%= locals.inv_make %>">

    <!-- Model -->
    <label for="model">Model:</label>
    <input type="text" id="model" name="inv_model" required
      pattern="[A-Za-z\s]+"
      value="<%= locals.inv_model %>">

    <!-- Description -->
    <label for="description">Description:</label>
    <textarea id="description" name="inv_description" required><%= locals.inv_description %></textarea>

    <!-- Image Path -->
    <label for="image">Image Path:</label>
    <input type="text" id="image" name="inv_image" required
      value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>">

    <!-- Thumbnail Path -->
    <label for="thumbnail">Thumbnail Path:</label>
    <input type="text" id="thumbnail" name="inv_thumbnail" required
      value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

    <!-- Price -->
    <label for="price">Price:</label>
    <input type="number" id="price" name="inv_price" required
      min="0" step="0.01"
      value="<%= locals.inv_price %>">

    <!-- Year -->
    <label for="year">Year:</label>
    <input type="number" id="year" name="inv_year" required
      min="1900" max="2099"
      value="<%= locals.inv_year %>">

    <!-- Miles -->
    <label for="miles">Miles:</label>
    <input type="number" id="miles" name="inv_miles" required
      min="0"
      value="<%= locals.inv_miles %>">

    <!-- Color -->
    <label for="color">Color:</label>
    <input type="text" id="color" name="inv_color" required pattern="[A-Za-z\s]+"
      value="<%= locals.inv_color %>">

    <button type="submit">Add New Vehicle</button>
  </form>
</div>